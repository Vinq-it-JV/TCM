            <script src="{{ asset('bundles/app/js/app/services/pages.js') }}"></script>
            <script src="{{ asset('bundles/app/js/app/services/user.js') }}"></script>

            <script src="{{ asset('bundles/app/js/app/filters/gmt.js') }}"></script>
            <script src="{{ asset('bundles/app/js/app/filters/filterTranslate.js') }}"></script>

            <script src="{{ asset('bundles/app/js/app/datasets/languages.js') }}"></script>
            <script src="{{ asset('bundles/app/js/app/datasets/roles.js') }}"></script>

            <script src="{{ asset('bundles/app/js/app/directives/focus.js') }}"></script>
