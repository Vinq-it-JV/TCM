                Dropzone.autoDiscover = false;
            </script>
        {% endblock %}
    </head>

    {% macro translate(text, params) %}
        {{ '{{ \'' ~ text ~ '\' | translate: \'' ~ params ~ '\' }}' }}
    {% endmacro %}

    {% import _self as ng %}

    <div cg-busy="{promise:BE.promise(),message:BE.waitText(),minDuration:1000,delay:BE.getLoaderDelay()}"></div>

    {% block body %}
        <body id="top" style="height: inherit" ng-app="tcmApp" ng-controller="appCtrl" data-ng-init="init()">
            {% block contents %}

                {% block header %}
                {% endblock %}

                {% block page %}
                {% endblock %}

                {% block footer %}
                {% endblock %}

            {% endblock %}
        </body>
    {% endblock %}

    {% block javascripts %}
    {% endblock %}
</html>
