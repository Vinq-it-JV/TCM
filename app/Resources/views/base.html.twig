            <script src="{{ asset('bundles/app/js/angular-storage/angular-local-storage.min.js') }}"></script>
            <script src="{{ asset('bundles/app/js/angular-animate/animate.min.js') }}"></script>

            <script src="{{ asset('bundles/app/js/angular-strap/angular-strap.min.js') }}"></script>
            <script src="{{ asset('bundles/app/js/angular-strap/angular-strap.tpl.min.js') }}"></script>
            <script src="{{ asset('bundles/app/js/bootstrap/bootstrap.min.js') }}"></script>

            <script src="{{ asset('bundles/app/js/angular-translate/angular-translate.min.js') }}"></script>
            <script src="{{ asset('bundles/app/js/angular-translate/angular-translate-storage-cookie.min.js') }}"></script>
