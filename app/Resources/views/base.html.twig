            <script src="{{ asset('bundles/app/js/angular-ui-router/angular-ui-router.min.js') }}"></script>
            <script src="{{ asset('bundles/app/js/angular-validation/angular-validation.min.js') }}"></script>
            <script src="{{ asset('bundles/app/js/angular-select/select.min.js') }}"></script>
            <script src="{{ asset('bundles/app/js/angular-toggle/angular-toggle.min.js') }}"></script>
            <script src="{{ asset('bundles/app/js/angular-tree/angular-ui-tree.js') }}"></script>
            <script src="{{ asset('bundles/app/js/angular-map/ng-map.min.js') }}"></script>
            <script src="{{ asset('bundles/app/js/angular-dropzone/dropzone.js') }}"></script>
            <script src="{{ asset('bundles/app/js/angular-dropzone/ng-dropzone.min.js') }}"></script>

            <script src="{{ asset('bundles/app/js/angular-charts/highcharts.js') }}"></script>
            <script src="{{ asset('bundles/app/js/angular-charts/highcharts-more.js') }}"></script>
            <script src="{{ asset('bundles/app/js/angular-charts/highcharts-ng.min.js') }}"></script>

            <script src="{{ asset('bundles/app/js/moment/moment-with-locales.min.js') }}"></script>
            <script src="{{ asset('bundles/app/js/iban/iban.js') }}"></script>
            <script src="{{ asset('bundles/app/js/smart-table/smart-table.js') }}"></script>

            <script src="{{ asset('js/fos_js_routes.js') }}"></script>

