<div class="container" ng-form="attachmentForm">

    {# Attachment information #}
    <h5 ng-cloak>
        <i class="fa fa-fw fa-list"></i> {{ ng.translate('INVENTORY.LABEL') }} {{ ng.translate('INVENTORY.OF') }} {{ store.Name }}
    </h5>
    <div class="well">
        {% verbatim %}
        <div class="form-group">
            <div class="row">
                <div class="col-md-12 col-sx-12">
                    <div ng-if="collections.attachment().Type == 1" class="text-center">
                        <img ng-src="{{ attachmentUrl(collections.attachment().Id) }}" width="75%"/>
                    </div>
                    <div ng-if="collections.attachment().Type == 2" class="text-center">
                        <i class="fa fa-fw fa-file-pdf-o fa-5x text-center"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2 col-xs-4" ng-cloak><label>{{ 'COLLECTIONS.NAME' | translate }}:</label></div>
                <div class="col-md-10 col-xs-8" ng-cloak>
                    <input class="form-control input-sm" name="Name" type="text"
                           ng-model="collections.attachment().Name" validation="min_len:1|required" no-enter/>
                </div>
            </div>
        </div>
        <div ng-if="collections.attachment().Type == 1" class="form-group">
            <div class="row">
                <div class="col-md-2 col-xs-4" ng-cloak><label>{{ 'COLLECTIONS.ROTATE_IMAGE' | translate }}:</label></div>
                <div class="col-md-10 col-xs-8" ng-cloak>
                    <input name="Rotate" type="checkbox" ng-model="collections.attachment().Rotate" no-enter/>
                </div>
            </div>
        </div>
        {% endverbatim %}
    </div>

    {# Buttons #}
    <div class="panel-footer">
        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-sm btn-default pull-left" ng-click="showPreviousPage()" ng-cloak>
                    <i class="fa fa-close"></i> {{ ng.translate('CANCEL') }}
                </button>
                <button class="btn btn-sm btn-success pull-right" ng-click="saveAttachmentData()"
                        ng-disabled="attachemntForm.$invalid">
                    <i class="fa fa-floppy-o" ng-cloak></i> {{ ng.translate('SAVE') }}
                </button>
            </div>
        </div>
    </div>
</div>

