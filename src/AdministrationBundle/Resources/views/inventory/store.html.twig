{% extends 'base.html.twig' %}

{% block contents %}
    {% if app.user %}
        {% set execute = 'getCollectionData(' ~ store.Id ~ ',"' ~ collectionType ~ '")' %}
        <div ng-controller="collectionCtrl" ng-init="{{ execute }}">

            {% block header %}
                {% include 'AdministrationBundle:header:header.html.twig' %}
            {% endblock %}

            {% block page %}
                <div class="page" ng-switch="activePage">
                    <div ng-switch-when="administration_inventory">
                        {% include 'AdministrationBundle:inventory:inventory.html.twig' %}
                    </div>
                    <div ng-switch-when="inventoryInfo">
                        {% include 'AdministrationBundle:inventory:inventory_info.html.twig' %}
                    </div>
                    <div ng-switch-when="inventoryEdit">
                        {% include 'AdministrationBundle:inventory:inventory_form.html.twig' %}
                    </div>
                    <div ng-switch-when="inventoryAdd">
                        {% include 'AdministrationBundle:inventory:inventory_form.html.twig' %}
                    </div>
                    <div ng-switch-when="attachmentEdit">
                        {% include 'AdministrationBundle:attachment:attachment_form.html.twig' %}
                    </div>
                </div>
            {% endblock %}
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/app/js/app/controllers/collectionCtrl.js') }}"></script>
    <script src="{{ asset('bundles/app/js/app/datasets/collections.js') }}"></script>
{% endblock %}

