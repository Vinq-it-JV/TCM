{% extends 'base.html.twig' %}
{% import 'macros.html.twig' as mc %}

{% import _self as form %}

{% block contents %}
    {% if app.user %}
        {% set ngInit = "newUser()" %}
    <div ng-controller="userCtrl" ng-init="{{ ngInit }}">

        {% block header %}
            {% include 'AdministrationBundle:header:header.html.twig' %}
        {% endblock %}

        {% block page %}
            <div class="page">
                <div class="container">
                    <div class="row">
                        <div class="panel-body">
                            <h4 ng-cloak>
                                <i class="fa fa-user"></i> {{ mc.translate('USER.LABEL') }}
                            </h4>
                            <hr/>
                            {%  include 'AdministrationBundle:users:user_form.html.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
    </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/app/js/app/datasets/users.js') }}"></script>
{% endblock %}