<div class="container">
    <div class="row">
        <div class="panel-body">
            <h4 ng-cloak>
                <i class="fa fa-fw fa-list"></i> {{ ng.translate('INVENTORY.LABEL') }} {{ ng.translate('INVENTORY.OF') }} {{ store.Name }}
            </h4>
            <hr/>
            <div class="well table-responsive">
                <section st-table="collectionsCollection" st-safe-src="collections.collections()">
                    <div class="row">
                        <div class="col-md-3 col-xs-6">
                            <input st-search class="form-control input-sm"
                                   placeholder="{{ ng.translate('SEARCH') }}" type="text" ng-cloak/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-12 col-xs-12">
                            <table class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th st-sort="Name" class="st-sortable col-md-9 col-xs-7"
                                        ng-cloak>{{ ng.translate('COLLECTIONS.DESCRIPTION') }}</th>
                                    <th st-sort="Attachments" class="st-sortable col-md-1 col-xs-2 text-center"
                                        ng-cloak><i class="fa fa-fw fa-paperclip"></i></th>
                                    <th class="st-nosort text-right col-md-2 col-xs-3"
                                        ng-cloak>{{ ng.translate('ACTION') }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% verbatim %}
                                <tr ng-repeat="row in collectionsCollection">
                                    <td ng-cloak>{{ row.Name }}</td>
                                    <td class="text-center"><i class="fa fa-fw fa-paperclip" ng-if="row.Attachments"></i></td>
                                    <td>
                                        <div class="pull-right">
                                            <button type="button" ng-click="showCollection(row.Id, 'inventoryInfo')"
                                                    class="btn btn-xs btn-info">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                {% endverbatim %}
                                </tbody>
                                <tfoot ng-show="collectionsCollection.length > 10">
                                    <tr>
                                        <td class="text-center" st-pagination="" st-items-by-page="10" colspan="3">
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-12 col-lg-12">
            <div class="panel panel-info cursor-pointer" ng-click="pageBack()">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12 text-left big-button-text" ng-cloak>
                            {{ ng.translate('BACK') }}
                            <i class="fa fa-chevron-left fa-2x fa-fw pull-right"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

