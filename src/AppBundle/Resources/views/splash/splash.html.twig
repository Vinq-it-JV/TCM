{% extends 'base.html.twig' %}
{% import 'macros.html.twig' as mc %}

{% block contents %}

    {% block header %}
    {% endblock %}

    {% block page %}
        <div ng-controller="splashCtrl" ng-init="init()" style="height: 100%">
            <div class="container container-center">
                <div class="vertical-center-row">
                    <div class="text-center col-md-4 col-md-offset-4">
                        <img class='tcmLogo-splash animated fadeInUp'
                             src="{{ asset('bundles/app/images/beerglass.png') }}"/>
                    </div>
                    <div class="text-center col-md-4 col-md-offset-4">
                        <div style="padding-top: 20px;"></div>
                        <div id="splashText" class="tcmText-splash animated flipInX">{{ mc.translate('SPLASH.TCM') }}</div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/app/js/app/controllers/splashCtrl.js') }}"></script>
{% endblock %}
